<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionMenuTextColor">@color/toolbar_foreground</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/ActionModeCloseButton</item>
        <item name="actionModeBackground">@color/action_mode_background</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/ActionModeTitleText</item>
    </style>

    <style name="ActionModeTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/action_mode_foreground</item>
    </style>

    <style name="ActionModeCloseButton" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/action_mode_foreground</item>
    </style>

    <style name="ToolbarEditText" parent="AppTheme">
        <item name="colorControlNormal">@color/toolbar_foreground</item>
        <item name="colorControlActivated">@color/toolbar_foreground</item>
        <item name="colorControlHighlight">@color/toolbar_foreground</item>
        <item name="android:textColorHint">#b3ffffff</item>
        <item name="android:editTextColor">@color/toolbar_foreground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TimelineSeekBar" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
